{% extends 'base.html.twig' %}

{% block body %}

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Région</th>
      <th scope="col">Nom</th>
      <th scope="col">Millésime</th>
      <th scope="col">Contenance</th>
      <th scope="col">Robe</th>
      <th scope="col">Stock</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    {% for vin in vins %}
        <tr>
            <th>{{ vin.region.nom }} </th>
            <th scope="row">{{ vin.nom }}</th>
            <td>{{ vin.millesime }}</td>
            <td>{{ vin.contenance }}</td>
            <td>{{ vin.robe }}</td>
            <td>{{ vin.qttStock }}</td>
            <th><a class="btn btn-secondary" href="{{ path('vin.show', {id: vin.id}) }}">Voir</a></th>
        </tr>
    {% endfor %} 
  </tbody>
</table>
<br>

<a href="{{ path('vin.new') }}" class="btn btn-primary">Nouveau Vin</a>

{% endblock %}
